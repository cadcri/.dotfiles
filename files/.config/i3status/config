general {
  colors = true
  color_good = "#a3be8c"
  color_degraded = "#ebcb8b"
  color_bad = "#bf616a"
  interval = 1
  separator = "|"
}

order +="wireless _first_"
order +="memory"
order +="cpu_usage"
order +="battery 0"
order +="volume master"
order +="tztime local2"
order +="tztime local"

memory {
  memory_used_method = classical
  format=" %percentage_used"
}

cpu_usage {
  format = " %usage"
  degraded_threshold = 90
  max_threshold = 95
} 

ethernet enp0s31f6 {
  format_up = "ETH: %ip (%speed)"
  format_down = "ETH: down"
}

wireless _first_ {
  format_quality = "%02d%s"
  format_up = " %quality  %essid"
  format_down  = ""
}

battery 0 {
  format = " %percentage"
  format_down = "No battery"
  last_full_capacity = true
  integer_battery_capacity = true
  threshold_type=percentage
  low_threshold=10
} 

tztime local {
        format = " %z %H:%M:%S"
}

tztime local2 {
        format = " %a %d/%m" 
}

volume master {
	format = " %volume"
   	format_muted = " %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = -1
}

